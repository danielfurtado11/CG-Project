<world>
    <window width="512" height="512" /> 
    <camera>
        <position x="3" y="2" z="1" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="1000" />
    </camera>
    <lights>
        <light type="POINT" posX="0" posY="0" posZ="0"
                ambiR="0.5" ambiG="0.5" ambiB="0.5"
                diffR="1.0" diffG="1.0" diffB="1.0"
                specR="1.0" specG="1.0" specB="1.0" />
    </lights>
    <group> <!-- Sol -->
        <transform>
            <scale  x="4.5" y="4.5" z="4.5" />
            <color r="0.973" g="0.878" b="0" />
            <rotate time="100" y="1" />
        </transform>
        <models>
            <model file="sphere.3d" emisR="1.0" emisG="1.0" emisB="1.0" texture="sun.jpg"/>
        </models>
    </group>

    <group> <!-- Cometa -->
        <transform>
            <translate time="10" closed="true" >
                    <point x="30" y="20" z="0" />
                    <point x="20.5" y="15" z="20.5" />
                    <point x="0" y="10" z="30" />
                    <point x="-20.5" y="5" z="20.5" />
                    <point x="-30" y="0" z="0" />
                    <point x="-20.5" y="5" z="-20.5" />
                    <point x="0" y="10" z="-30" />
                    <point x="20.5" y="15" z="-20.5" />
            </translate>
            <scale  x="0.3" y="0.3" z="0.3" />
            <color r="0.808" g="0.808" b="0.808" />
        </transform>
        <models>
            <model file="oi.3d" />
        </models>
    </group>

    <group> <!-- Mercurio -->
        <transform>
            <translate time="50" closed="true" >
                <point x="6" y="0" z="-6" />
                <point x="0" y="0" z="-8" />
                <point x="-6" y="0" z="-6" />
                <point x="-8" y="0" z="0" />
                <point x="-6" y="0" z="6" />
                <point x="0" y="0" z="8" />
                <point x="6" y="0" z="6" />                
                <point x="8" y="0" z="0" />
            </translate>
            <scale  x="0.2" y="0.2" z="0.2" />
            <color r="0.757" g="0.808" b="0.871" />
            <rotate time="100" y="1" />
        </transform>
        <models>
            <model file="sphere.3d" />
        </models>
    </group>
</world>
